    "/appointments": {
      "get": {
        "summary": "Get all appointments (optionally filtered)",
        "tags": ["Appointments"],
        "description": "this is the description",
        "parameters": [
          {
            "name": "client",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Filter appointments by client ID"
          },
          {
            "name": "caregiver",
            "in": "query",
            "required": false,
            "type": "string",
            "description": "Filter appointments by caregiver ID"
          },
          {
            "name": "statusType",
            "in": "query",
            "required": false,
            "type": "string",
            "enum": ["pending", "confirmed", "completed", "cancelled"],
            "description": "Filter appointments by status"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Appointments"],
        "summary": "Create new appointment with client, caregiver, and service ID",
        "description": "",
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "client": {
                  "type": "string",
                  "example": "64fe7b193c2a3d001b20fc19",
                  "description": "MongoDB ObjectId of the client"
                },
                "caregiver": {
                  "type": "string",
                  "example": "64fe7b193c2a3d001b20fc22",
                  "description": "MongoDB ObjectId of the caregiver"
                },
                "service": {
                  "type": "string",
                  "example": "64fe7b193c2a3d001b20fc29",
                  "description": "MongoDB ObjectId of the service being booked"
                },
                "contact": {
                  "type": "string",
                  "example": "client@example.com",
                  "description": "Email or phone number for contact"
                },
                "statusType": {
                  "type": "string",
                  "enum": ["pending", "confirmed", "completed", "cancelled"],
                  "example": "pending",
                  "description": "Status of the appointment"
                },
                "notes": {
                  "type": "string",
                  "example": "Please arrive 10 minutes early.",
                  "description": "Additional notes or instructions"
                },
                "aptDate": {
                  "type": "string",
                  "format": "date-time",
                  "example": "2025-07-15T13:30:00Z",
                  "description": "Date and time of the appointment"
                }
              },
              "required": ["client", "caregiver", "service", "contact", "statusType", "aptDate"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
